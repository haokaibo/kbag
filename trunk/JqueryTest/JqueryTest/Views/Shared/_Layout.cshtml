<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Controls/jquery.jqGrid-4.4.1/css/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
